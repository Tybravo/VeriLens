{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],

    "lib": ["ES2020"],

    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
